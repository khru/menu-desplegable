{
    "env": {
        "es6" : true,
        "browser" : true,
        "node" : true,
        "jquery": true,
        "serviceworker" : true
    },
    "extends": "eslint:recommended",
    "rules" : {
        "no-console" : "off",
        "arrow-body-style" : [ 2, "as-needed" ],
        "no-param-reassign" : [ 2,  { "props" : false } ],
        "import" : 0,
        "func-names" : 0,
        "space-before-function-parent" : 0,
        "max-len" : 0,
        "comma-dangle" : 0,
        "no-underscore-dangle" : 0,
        "radix" : 0,
        "react/prefer-es6-class" : 0,
        "consistent-return" : 0 
    },
    "plugins": [
        "eslint-plugin-html",
        "markdown"
    ]
}